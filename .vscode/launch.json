{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run manager module",
      "type": "debugpy",
      "request": "launch",
      "module": "manager.run",
      "justMyCode": false,
      "preLaunchTask": "Build rhea-worker (multi-arch)"
    },
    {
      "name": "Run test manager module",
      "type": "debugpy",
      "request": "launch",
      "module": "manager.run_test",
      "justMyCode": false,
      "preLaunchTask": "Build rhea-worker (multi-arch)"
    },
    {
      "name": "Run MCP test invocation",
      "type": "debugpy",
      "request": "launch",
      "module": "tests.evals.mcp_run_tool_test_single",
      "justMyCode": false,
      "args": ["${input:mcpArgs}"],
      "console": "integratedTerminal"
    },
    {
      "name": "Attach to Parsl Worker",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5680
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/home/rhea/app"
        }
      ]
    },
    {
      "name": "Attach to MCP Debugpy",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5681
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}"
        }
      ],
      "justMyCode": false,
      // "preLaunchTask": "Run MCP via uv"
    }
  ],
  "inputs": [
    {
      "id": "mcpArgs",
      "type": "promptString",
      "description": "Enter command-line arguments for the MCP test",
      "default": ""
    }
  ]
}
