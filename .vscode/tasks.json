{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format with Black",
      "type": "shell",
      "command": "black",
      "args": [
        "."
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Type-check with Pyright",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "pyright",
        "--warnings",
        "--project",
        "."
      ],
      "group": "test",
      "problemMatcher": {
        "owner": "pyright",
        "fileLocation": ["absolute"],
        "pattern": [
          {
            "regexp": "^\\s*([^:]+\\.py):(\\d+):(\\d+) - (error|warning): (.+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ]
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build and Push rhea-worker (multi-arch)",
      "type": "shell",
      "command": "docker",
      "args": [
        "buildx",
        "build",
        "-f",
        "Dockerfile.agent",
        "--platform",
        "linux/amd64,linux/arm64",
        "-t",
        "chrisagrams/rhea-worker-agent:latest",
        "--push",
        "."
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build rhea-worker (multi-arch)",
      "type": "shell",
      "command": "docker",
      "args": [
        "buildx",
        "build",
        "-f",
        "Dockerfile.agent",
        "--platform",
        "linux/amd64,linux/arm64",
        "-t",
        "chrisagrams/rhea-worker-agent:latest",
        "."
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build rhea-server (multi-arch)",
      "type": "shell",
      "command": "docker",
      "args": [
        "buildx",
        "build",
        "-f",
        "Dockerfile",
        "--platform",
        "linux/amd64,linux/arm64",
        "-t",
        "chrisagrams/rhea-server:latest",
        "."
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Generate Badges",
      "type": "shell",
      "command": "uv run genbadge coverage -i coverage.xml -o .github/badges/coverage.svg && uv run genbadge tests -i pytest.xml -o .github/badges/tests.svg",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
