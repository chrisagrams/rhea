        "build",
        "-f",
        "Dockerfile",
        "--platform",
        "linux/amd64,linux/arm64",
        "-t",
        "chrisagrams/rhea-server:latest",
        "."
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
